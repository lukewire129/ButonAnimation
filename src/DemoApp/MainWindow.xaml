<Window
    x:Class="DemoApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DemoApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel.Resources>
            <Style TargetType="{x:Type HoverAnimationButton}">
                <Setter Property="Width" Value="300" />
                <Setter Property="Height" Value="60" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Margin" Value="5" />
            </Style>
        </StackPanel.Resources>
        <StackPanel Orientation="Horizontal">
            <HoverAnimationButton
                Content="UPADTED PASSWOARD"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White">
                <HoverAnimationButton.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1, 1">
                        <GradientStop Offset="0" Color="#ea0606" />
                        <GradientStop Offset="1" Color="#ff667c" />
                    </LinearGradientBrush>
                </HoverAnimationButton.Background>
            </HoverAnimationButton>
            <HoverAnimationButton
                Content="UPADTED PASSWOARD"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White">
                <HoverAnimationButton.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1, 1">
                        <GradientStop Offset="0" Color="#353b65" />
                        <GradientStop Offset="1" Color="#1f233c" />
                    </LinearGradientBrush>
                </HoverAnimationButton.Background>
            </HoverAnimationButton>
        </StackPanel>
    </StackPanel>
</Window>
